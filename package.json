{
  "name": "relay",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "demo": "bun run --cwd demo dev",
    "package:change": "bun changeset && git stage ./.changeset/* && git commit --m \"feat: changeset\" && git push",
    "package:release": "bun run deploy && changeset version && ci publish",
    "ci:publish": "pnpm publish -r --access public && changeset tag",
    "build:sdk": "bun run --cwd packages/sdk build",
    "build:adapter": "bun run --cwd packages/relay-ethers-wallet-adapter build",
    "syncSdkTypes": "bun run --cwd packages/sdk ./scripts/sync-api.mjs",
    "deploy": "bun build:sdk && bun run --cwd packages/sdk deploy",
    "sdk": "bun run --cwd packages/sdk dev",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "openapi-typescript": "^6.7.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
